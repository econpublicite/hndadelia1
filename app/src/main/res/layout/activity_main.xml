<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"

    android:background="@drawable/fondo"
    tools:context="com.econpublicite.hndadelia.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:minHeight="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.284"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/fragancia"
            android:layout_width="300px"
            android:layout_height="90px"
            android:layout_marginTop="22px"
            android:background="@drawable/fragancia"
            android:gravity="center"

            />

        <Button
            android:id="@+id/Maquillaje"
            android:layout_width="300px"
            android:layout_height="90px"
            android:layout_marginTop="22px"
            android:background="@drawable/maquillajes"
            android:gravity="center"
             />

        <Button
            android:id="@+id/Bienestar"
            android:layout_width="300px"
            android:layout_height="90px"
            android:layout_marginTop="22px"
            android:background="@drawable/bienestar"
            android:gravity="center"
            />

        <Button
            android:id="@+id/Cuerpo"
            android:layout_width="300px"
            android:layout_height="90px"
            android:layout_marginTop="22px"
            android:background="@drawable/cuerpo"
            android:gravity="center" />

        <Button
            android:id="@+id/Cuidado"
            android:layout_width="300px"
            android:layout_height="90px"
            android:layout_marginTop="22px"
            android:background="@drawable/cuidado"
            android:gravity="center" />

        <Button
            android:id="@+id/afiliate"
            android:layout_width="300px"
            android:layout_height="90px"
            android:layout_marginTop="22px"
            android:background="@drawable/afiliate"
            android:onClick="afiliacion"
            android:gravity="center"
             />

    </LinearLayout>

</LinearLayout>